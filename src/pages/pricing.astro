---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Asesoría Básica",
    price: "$5",
    popular: false,
    features: [
      "1 Hora de Asesoría",
      "Consultas por Email",
      "Soporte Básico",
    ],
    button: {
      text: "Empezar",
      link: "#",
    },
  },
  {
    name: "Asesoría Avanzada",
    price: "$12",
    popular: true,
    features: [
      "3 Horas de Asesoría",
      "Consultas por Email y Video",
      "Soporte Prioritario",
      "Material Adicional",
    ],
    button: {
      text: "Empezar",
      link: "#",
    },
  },
  {
    name: "Curso Completo",
    price: "$30",
    popular: false,
    features: [
      "10 Horas de Clases",
      "Consultas Ilimitadas",
      "Material de Estudio Completo",
      "Certificación de Finalización",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Precios</Fragment>
      <Fragment slot="desc">
        Precios claros y accesibles para nuestras asesorías y clases de programación.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
