---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";
import { pwaInfo } from "virtual:pwa-info";
import ReloadPrompt from "../components/ReloadPrompt.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(
  Astro.url.pathname,
  "https://abrahamicm-github-io.pages.dev/",
).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Servicios de Programación a Medida"
  : "Servicios de Programación a Medida - Potencia tus proyectos y habilidades";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <meta name="theme-color" content="#ffffff" />

    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-M88MH3ZT");
    </script>

    <meta
      name="google-site-verification"
      content="JIlKtbhMPQ9tR74oZHZkQYT3JcIpSr9qMSrKvFxzy6E"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Ofrecemos asesorías personalizadas y clases interactivas en programación para ayudarte a mejorar tus habilidades."
      canonical={canonicalURL}
      twitter={{
        creator: "@tuusuario",
        site: "@tuusuario",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Asesorías y Clases de Programación`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Imagen de la Página de Asesorías y Clases de Programación",
        },
      }}
    />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G74FH3S5VV"
    ></script><script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-G74FH3S5VV");
    </script></head
  >

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-M88MH3ZT"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>

    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
      var Tawk_API = Tawk_API || {},
        Tawk_LoadStart = new Date();
      (function () {
        var s1 = document.createElement("script"),
          s0 = document.getElementsByTagName("script")[0];
        s1.async = true;
        s1.src = "https://embed.tawk.to/66bcd4fa146b7af4a43a6be5/1i58pvsv6";
        s1.charset = "UTF-8";
        s1.setAttribute("crossorigin", "*");
        s0.parentNode.insertBefore(s1, s0);
      })();
    </script>
    <!--End of Tawk.to Script-->
    <ReloadPrompt />
  </body>
</html>
